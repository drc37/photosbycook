%html
  %head
    = yield :header
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"    
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js"    
    = javascript_include_tag "jquery.ae.image.resize"
    = javascript_include_tag "jquery.mousewheel"
    = javascript_include_tag "jquery.ba-bbq.min.js"
    
    = #javascript_include_tag "jquery.address-1.2.2.min"
    = #javascript_include_tag "jquery.history"
    = javascript_include_tag "jscrollhorizontalpane"
    = # javascript_include_tag "jQueryRotate"

    = # Fonts
    = javascript_include_tag "cufon-yui"
    = javascript_include_tag "Calluna_400.font"
    = javascript_include_tag "Museo_Slab_500_400-Museo_Slab_500_italic_400.font"

    = javascript_include_tag "application"
    = javascript_include_tag 'photosbycook'
  
    %link{ :href => "/images/favicon.ico", :rel => "shortcut icon" }
    = stylesheet_link_tag "jquery-ui-1.7.2.css", 'compiled/layout.css'
    / %title= "#{organization_name}"
    / = render :partial => "layouts/google_analytics"
  %body
    .container
      #header
        / = render :partial => 'application/logo'

      #flash
        / = render :partial => 'layouts/flash', :locals => {:flash => flash}

      #app
        = yield

      - unless Rails.env == "test"
        :javascript
          Cufon.now();
